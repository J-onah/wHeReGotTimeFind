<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.NewReviewFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/vendorHeader"
            android:layout_width="432dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="432dp"
            android:background="@drawable/boxgreen"
            android:text="@string/vendor_details"
            android:textAlignment="center"
            android:textColor="#081C15"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <AutoCompleteTextView
            android:id="@+id/vendor_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="20dp"
            android:completionThreshold="1"
            android:ems="10"
            android:hint="@string/vendor_name"
            android:inputType="text"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/vendor_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/vendor_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="1dp"
            android:ems="10"
            android:hint="@string/vendor_location"
            android:inputType="textPostalAddress"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/vendor_phone_no"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vendor_name" />

        <EditText
            android:id="@+id/vendor_phone_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="6dp"
            android:ems="10"
            android:hint="@string/vendor_phone_no"
            android:inputType="number|phone"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/reviewHeader"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vendor_location" />

        <TextView
            android:id="@+id/reviewHeader"
            android:layout_width="436dp"
            android:layout_height="38dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="168dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="263dp"
            android:background="@drawable/boxgreen"
            android:text="@string/review_details"
            android:textAlignment="center"
            android:textColor="#081C15"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:isIndicator="false"
            android:numStars="5"
            android:progressTint="#40916c"
            android:stepSize="1"
            app:layout_constraintBottom_toTopOf="@+id/review_product_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reviewHeader" />


        <AutoCompleteTextView
            android:id="@+id/review_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:completionThreshold="1"
            android:ems="10"
            android:hint="@string/product_name"
            android:inputType="text"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/review_units_purchased"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar" />



        <EditText
            android:id="@+id/review_units_purchased"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="1dp"
            android:ems="10"
            android:hint="@string/units_purchased"
            android:inputType="number"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/review_unit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/review_product_name" />


        <EditText
            android:id="@+id/review_unit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="@string/review_unit"
            android:inputType="text"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/review_price_per_unit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/review_units_purchased" />


        <EditText
            android:id="@+id/review_price_per_unit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="@string/price_per_unit"
            android:inputType="numberDecimal"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/review_comments"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/review_unit" />

        <EditText
            android:id="@+id/review_comments"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="@string/comments"
            android:inputType="text"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/submit_review"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/review_price_per_unit" />


        <Button
            android:id="@+id/submit_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit_review"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/review_comments"></Button>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="451dp" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>